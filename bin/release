#!/bin/bash
set -euo pipefail

BUILD_DIR=$1

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
output_dir=$(mktemp -d -t releaseXXX)

url=$(cat "$BUILDPACK_DIR/SHIM_URL")
wget -O "$output_dir/shim-bundle.tgz" "$url" &>/dev/null
tar xvf "$output_dir/shim-bundle.tgz" -C "$output_dir" &>/dev/null

$output_dir/release "$BUILD_DIR"
