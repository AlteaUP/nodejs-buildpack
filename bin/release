#!/bin/bash
set -euo pipefail

BUILD_DIR=$1

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
source "$BUILDPACK_DIR/scripts/install_go.sh"
output_dir=$(mktemp -d -t releaseXXX)

echo "-----> Running go build release"
GOOS=linux GOROOT=$GoInstallDir/go $GoInstallDir/go/bin/go build -ldflags="-s -w" -o $output_dir/release github.com/cloudfoundry/libbuildpack/shims/cmd/release

$output_dir/release "$BUILD_DIR"
